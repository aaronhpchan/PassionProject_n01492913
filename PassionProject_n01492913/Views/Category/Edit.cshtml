@model PassionProject_n01492913.Models.CategoryDto

@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category</h2>
<form action="/Category/Update/@Model.CategoryID" method="POST">
    <div style="display:none;">
        @* Pass through the category ID *@
        <input type="text" name="CategoryID" value="@Model.CategoryID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="CategoryName" value="@Model.CategoryName" />
    </div>
    <div>
        <input type="submit" value="Update Category" />
    </div>
</form>


