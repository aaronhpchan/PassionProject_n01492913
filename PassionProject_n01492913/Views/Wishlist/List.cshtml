@model IEnumerable<PassionProject_n01492913.Models.WishlistDto>
@{
    ViewBag.Title = "Wishlist";
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Your Wishlists</h1>
    <a href="/Wishlist/New">Create New Wishlist</a>
</div>

@foreach (var wishlist in Model)
{
    <h2 class="h3"><a href="/Wishlist/Details/@wishlist.WishlistID">@wishlist.WishlistName</a></h2>
}
